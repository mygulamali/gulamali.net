---
title: Publications
---

<table class="table is-size-5">
  <% page_articles.each_with_index do |article, i| %>
    <tr>
      <td>
        <time datetime="<%= article.date.strftime('%Y-%m-%d') %>">
          <%= article.date.strftime('%Y') %>
        </time>
      </td>
      <td><%= link_to article.title, article %></td>
    </tr>
  <% end %>
</table>
